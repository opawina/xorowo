<HelloScreen>:
    BoxLayout:
        Label:
            font_size: root.width / 32
            center_x: root.width / 2
            top: root.top - 50
            text: "Привет.\nЭто приложение"
        Button:
            text: 'Понял'
            on_release: root.manager.current = 'write'
            font_size: root.width / 9
            size_hint: .9, .2



<MainScreen>
    FloatLayout:
        Button:
            text: "+"
            on_release: root.manager.current = 'write'
            center: self.parent.center
            font_size: '{}'.format(root.width / 16)
        Button:
            text: "Хорошо"
            on_release: root.manager.current = 'read'
            center: self.parent.center
            font_size: '{}'.format(root.width / 16)



<ReadScreen>
    Label:
        text: 'ReadScreen'
        font_size: root.width / 32
        center_x: root.width / 2
        top: root.top - 50



<WriteScreen>
    text_input: txt_inp
    button_apply: btn_apl

    BoxLayout:
        orient: 'vertical'

        Label:
            text: 'WriteScreen'
            font_size: root.width / 32
            center_x: root.width / 2
            top: root.top - 50

        TextInput:
            id: txt_inp

        Button:
            id: btn_apl
            text: 'Apply'
            on_release: root.apply()





<AboutScreen>
    Label:
        text: 'About'
        font_size: root.width / 32
        center_x: root.width / 2
        top: root.top - 50


