<ButtonMain>
    size: 100, 100

<ButtonDown>
    size: 100, 100

<ButtonMenu>
    size: 100, 100

<ButtonAdd>
    size: 100, 100

<ReadField>
    size: 100, 100
    text: root.read_field.text



<HelloScreen>:
    button_down: btn_down
    BoxLayout:
        Label:
            font_size: root.width / 32
            center_x: root.width / 2
            top: root.top - 50
            text: "Привет.\nЭто приложение"
        ButtonDown:
            id: btn_dwn
            text: 'Понял'
            on_release: root.manager.current = 'write'
            font_size: root.width / 9
            size_hint: .9, .2



<MainScreen>
    button_main: btn_main
    button_add: btn_add
    BoxLayout:
        orientation: 'vertical'

        ButtonAdd:
            id: btn_add
            text: "+"
            on_release: root.manager.current = 'write'
            center: self.parent.center
            font_size: '{}'.format(root.width / 16)
        ButtonMain:
            id: btn_main
            text: "Хорошо"
            center: self.parent.center
            font_size: '{}'.format(root.width / 16)
            on_release: root.manager.current = 'read'



<ReadScreen>
    read_field: read_fld
    button_menu: btn_menu
    button_add: btn_add
    button_down: btn_down

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            ButtonMenu:
                id: btn_menu
                text: 'Menu'
                on_release: root.manager.current = 'menu'

            Label:

            ButtonAdd:
                id: btn_add
                text: 'Add one'
                on_release: root.manager.current = 'write'
        Label:
            text: 'ReadScreen'
            font_size: root.width / 32
            center_x: root.width / 2
            top: root.top - 50
        ReadField:
            id: read_fld
        ButtonDown:
            id: btn_down
            text: 'One more'
            on_release: root.read_field.get()



<WriteScreen>
    text_input: txt_inp
    button_down: btn_down

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'WriteScreen'
            font_size: root.width / 32
            center_x: root.width / 2
            top: root.top - 50

        TextInput:
            id: txt_inp

        ButtonDown:
            id: btn_down
            text: 'Apply'
            on_release: root.apply(root.manager)



<AboutScreen>
    Label:
        text: 'About'
        font_size: root.width / 32
        center_x: root.width / 2
        top: root.top - 50


