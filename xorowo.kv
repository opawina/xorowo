<ButtonMain>
    size: 100, 100

<ButtonDown>
    size: 100, 100

<ButtonMenu>
    size: 100, 100

<ButtonAdd>
    size: 100, 100

<ReadField>
    size: 100, 100



<HelloScreen>
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "Привет!\nЭто приложение поможет"
        ButtonDown:
            on_release: root.manager.current = 'write'



<MainScreen>
    BoxLayout:
        orientation: 'vertical'
        padding: 10

        BoxLayout:
            orientation: 'horizontal'
            ButtonMenu:
                id: btn_menu
                on_release: root.manager.current = 'menu'

            Label:

            ButtonAdd:
                id: btn_add
                on_release: root.manager.current = 'write'

        ButtonMain:
            id: btn_main
            center: self.parent.center
            font_size: '{}'.format(root.width / 16)
            on_release: root.manager.current = 'read'



<ReadScreen>
    read_field: read_fld
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: (1, .5)
            orientation: 'horizontal'
            ButtonMenu:
                id: btn_menu
                on_release: root.manager.current = 'menu'

            Label:

            ButtonAdd:
                id: btn_add
                on_release: root.manager.current = 'write'
        Label:
            text: "ReadSCREEN"
            font_size: root.width / 32
            center_x: root.width / 2
            top: root.top - 50
        ReadField:
            id: read_fld
            text: self.out
        ButtonDown:
            id: btn_down
            text: 'One more'
            on_release: root.get_one(); root.manager.current = 'main'



<WriteScreen>
    text_input: txt_inp
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            ButtonMenu:
                id: btn_menu
                on_release: root.manager.current = 'menu'

            Label:

            ButtonAdd:
                id: btn_add
                on_release: root.manager.current = 'write'

        Label:
            text: 'WriteScreen'
            font_size: root.width / 32
            center_x: root.width / 2
            top: root.top - 50

        TextInput:
            id: txt_inp

        ButtonDown:
            id: btn_down
            on_release: root.apply(); root.manager.current = 'main'



<MenuScreen>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            ButtonMenu:
                id: btn_menu
                on_release: root.manager.current = 'menu'

            Label:

            ButtonAdd:
                id: btn_add
                on_release: root.manager.current = 'write'
        Label:
        Label:
        Label:



<AboutScreen>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'

            ButtonMenu:
                id: btn_menu
                on_release: root.manager.current = 'menu'

            Label:

            ButtonAdd:
                id: btn_add
                on_release: root.manager.current = 'write'
        Label:
            text: 'About'
            font_size: root.width / 32
            center_x: root.width / 2
            top: root.top - 50


